CREATE DATABASE office_db;
USE office_db;
CREATE TABLE employees (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50),
    salary DECIMAL(10,2)
);
CREATE USER 'read_user'@'localhost' IDENTIFIED BY 'read123';
CREATE USER 'write_user'@'localhost' IDENTIFIED BY 'write123';
GRANT SELECT ON office_db.* TO 'read_user'@'localhost';
GRANT SELECT, INSERT, UPDATE ON office_db.employees 
TO 'write_user'@'localhost';
CREATE USER 'manager'@'localhost' IDENTIFIED BY 'manager123';

GRANT ALL PRIVILEGES ON office_db.* TO 'manager'@'localhost';
GRANT SELECT ON office_db.* 
TO 'manager'@'localhost' WITH GRANT OPTION;
REVOKE INSERT ON office_db.employees 
FROM 'write_user'@'localhost';
REVOKE ALL PRIVILEGES, GRANT OPTION 
FROM 'manager'@'localhost';
